import { useEffect, useState } from 'react';
import { getPortfolio } from '../lib/api';

export const usePortfolio = () => {
  const [data, setData] = useState<any[]>([]);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    getPortfolio()
      .then(setData)
      .finally(() => setLoading(false));
  }, []);

  return { data, loading };
};

